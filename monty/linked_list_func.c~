#include "monty.h"

/**
 *
 *
 *
 */
stack_t add_node(stack_t **top, int data_elem)
{
	stack *newnode;

	if (*top == NULL)
		return (NULL);

	newnode = malloc(sizeof(stack_t));
	if (newnode == NULL)
		return (NULL);

	newnode->n = data_elem;
	newnode->prev = NULL;
	newnode->next = *top;

	if (*top != NULL)
		(*top)->prev = newnode;

	*top = newnode;
	return(newnode);
}
